<div id="goragora">
  <div class="d-flex justify-content-center">
    <div class="card">
      <div class="card-body">
        <div id="여기에출력"></div>
          <div id="zone"></div>

          <div class ="container">
            <% current_user.zones.each do |zone| %>
              <%= link_to zone.name, search_zone_path(zone_id: zone.id), method: :put, remote: true %>
                |
            <% end %>
              <%= link_to '전체에서 뽑기', search_zone_path, method: :put, remote: true %>


          <div id="category"></div>

            <% @groups.each do |group| %>
              <%= link_to group.category, search_category_path(category: group.category), method: :put, remote: true %>
                |
            <% end %>
              <%= link_to '전체에서 뽑기', search_category_path, method: :put, remote: true %>
          </div>

          <div id="sum"></div>

            <%= form_with(url: search_sum_path, method: :put, remote: true) do |form| %>
          <div class="row">
            <div class="col-6">
              <%= form.label :zone_id %>
              <%= form.text_field :zone_id, id: :zone_id %>
            </div>
          </div>

          <div class="row">
            <div class="col-6">
              <%= form.label :category %>
              <%= form.text_field :category, id: :category %>
            </div>
            <div class="actions">
              <%= form.submit "눌러주세요", class: 'btn btn-primary btn-sm', id: 'btn-sm' %>
            </div>
              <% end %>
          </div>
      </div>
    </div>
  </div>
</div>
